<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".skill_activity">

    <ImageView
            android:src="@drawable/beginnerballerbg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/ball"
            android:background="@drawable/toggle"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"
            android:textColor="@android:color/background_light" android:textOff="baller" android:textOn="baller"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.52" android:onClick="ball_onclick"/>
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/beg"
            android:background="@drawable/toggle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            android:textColor="@android:color/background_light" android:textOn="beginner" android:textOff="beginner"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginTop="216dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.73" android:onClick="beg_onclick"/>
    <ImageView
            android:layout_width="122dp"
            android:layout_height="27dp" app:srcCompat="@drawable/swooshlogo"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/logoapp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.50121653"/>
    <Button
            android:text="NEXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@drawable/swoosh_button"
            android:textColor="@android:color/background_light"/>
    <TextView
            android:text="I am a"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:id="@+id/textView"
            android:textColor="@android:color/background_light" android:textStyle="bold" android:textSize="24sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
</android.support.constraint.ConstraintLayout>